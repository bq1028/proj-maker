  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/lodash": "^4.14.104",
    "@types/mock-fs": "^3.6.30",
    "hygen": "^1.4.11",
    "jest": "^22.3.0",
    "mock-fs": "^4.4.2",
    "ts-jest": "^22.0.4",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
